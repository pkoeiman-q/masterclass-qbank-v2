@model MasterclassApiTest.Models.GetKlantDTO;

<h1 align="center">Klant '@Model.Voorletters @Model.Achternaam' bijwerken.</h1>
<br />
<form method="post" action="update">
    <h3 align="center">Accountgegevens</h3>
    <div class="form-group">
        <input type="hidden" class="form-control" value="@Model.Id" asp-for="Id">
    </div>
    <div class="form-group">
        <label for="">Klant e-mailadres</label>
        <input type="email" class="form-control" asp-for="Email">
    </div>
    <br />

    <h3 align="center">Persoonlijke gegevens</h3>
    <div class="form-group">
        <label for="">Voorletters</label>
        <input type="text" class="form-control" asp-for="Voorletters">
    </div>
    <div class="form-group">
        <label for="">Achternaam</label>
        <input type="text" class="form-control" asp-for="Achternaam">
    </div>
    Geslacht
    <select asp-for="Geslacht" class="form-select" aria-label="Default select example">
        <option selected>Kies een optie</option>
        <option value="1">Man</option>
        <option value="2">Vrouw</option>
        <option value="3">Anders</option>
    </select>
    <div class="form-group">
        <label for="">Geboortedatum</label>
        <input type="date" class="form-control" asp-for="GeboorteDatum">
    </div>
    <div class="form-group">
        <label for="">Overlijdensdatum</label>
        <input type="date" class="form-control" asp-for="OverlijdensDatum">
    </div>
    <div class="form-group">
        <label for="">Telefoon nr.</label>
        <input type="text" class="form-control" asp-for="TelefoonNummer">
    </div>
    <br />

    <h3 align="center">Woon gegevens</h3>
    <div class="form-group">
        <label for="">Straat</label>
        <input type="text" class="form-control" asp-for="Adres.Straat">
    </div>
    <div class="form-group">
        <label for="">Woonplaats</label>
        <input type="text" class="form-control" asp-for="Adres.Woonplaats">
    </div>
    <div class="form-group">
        <label for="">Postcode</label>
        <input type="text" class="form-control" asp-for="Adres.Postcode">
    </div>
    <div class="form-group">
        <label for="">Huisnummer</label>
        <input type="number" class="form-control" asp-for="Adres.Huisnummer">
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Submit</button>
</form>