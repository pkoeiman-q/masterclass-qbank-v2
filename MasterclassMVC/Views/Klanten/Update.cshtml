@model MasterclassApiTest.Models.GetKlantDTO;

<br />
<form method="post" action="update">
    <div class="card">
        <div class="card-header">
            <b>Klant '@Model.Voorletters @Model.Achternaam' bijwerken.</b>
        </div>
        <div class="card-body">
            <h4>Accountgegevens</h4>
            <div class="row mb-3">
                <input type="hidden" class="form-control" value="@Model.Id" asp-for="Id">
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="">Klant e-mailadres</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" asp-for="Email" required>
                </div>
            </div>
            <br />

            <h4>Persoonlijke gegevens</h4>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="">Voorletters</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Voorletters" required>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="">Achternaam</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Achternaam" required>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="">Geslacht</label>
                <div class="col-sm-10">
                    <select asp-for="Geslacht" class="form-select" aria-label="Default select example">
                        <option selected>Kies een optie</option>
                        <option value="1">Man</option>
                        <option value="2">Vrouw</option>
                        <option value="3">Anders</option>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="">Geboortedatum</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" asp-for="GeboorteDatum" required>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="">Overlijdensdatum</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" asp-for="OverlijdensDatum" required>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="">Telefoon nr.</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="TelefoonNummer" required>
                </div>
            </div>
            <br />

            <h4>Woon gegevens</h4>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="">Straat</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Adres.Straat" required>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="">Woonplaats</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Adres.Woonplaats" required>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="">Postcode</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Adres.Postcode" required>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="">Huisnummer</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" asp-for="Adres.Huisnummer" required>
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
    
</form>